= link_to '< Back to Start', root_path
%br

%ul.list-group
  - @titles.in_groups_of(3).each do |grouping|
    %li.list-group-item
      .row
        - [0,1,2].each do |i|
          - if grouping[i].present?
            .col-md-4
              =link_to title_path(grouping[i]) do
                = grouping[i].name

= paginate @titles

.row
  .col-md-6
    .panel.panel-default
      .panel-heading
        Add your Own
      .panel-body
        = form_for :title, url: titles_path, method: :post do |f|
          .form-group
            = f.hidden_field :category_id, value: @category.id
            = f.text_field :name, class: 'form-control', placeholder: 'e.g., Game of Thrones'

          = f.submit 'Save Title', class: 'btn btn-success btn-sm'

.row
  .col-md-4
    - @descriptions.each do |description|
      = render partial: 'shared/description', locals: {description: description}
      .clearfix
        = link_to 'Show preview', new_daily_wit_stop_path(description_id: description.id), class: 'btn btn-default btn-sm pull-right'
      %hr
    = paginate(@descriptions)
  .col-md-8
    = render partial: 'email_preview', locals: {description: @preview_description}

    - if @preview_description.present?
      = link_to daily_wit_stops_path(description_id: @preview_description.id), method: :post, class: 'btn btn-primary' do
        Looks good! Schedule to Send

      = link_to daily_wit_stops_path, class: 'btn btn-default pull-right' do
        Reset
    %hr

    %h3 Scheduled
    
    - if @daily_wit_stops.scheduled.any?
      .alert.alert-info
        This will automatically send at 3pm PST #{Date.today}
        
    - @daily_wit_stops.scheduled.each do |daily_wit_stop|
      = daily_wit_stop.inspect

    %hr

    %h3 Sent
    - @daily_wit_stops.sent.each do |daily_wit_stop|
      = daily_wit_stop.inspect
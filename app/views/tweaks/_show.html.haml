%h1
  "#{tweak.name}"

%ul.list-group
  - @descriptions.each do |description|
    %li.list-group-item
      .btn-group.btn-group
        = link_to title_tweak_description_upvote_path(@title, tweak, description), remote: true, method: :put do
          %button.btn.btn-success.btn-sm{:type => "button"}
            = description.upvotes
            %i.fa.fa-thumbs-up

      %h4
        = description.text
      \- #{description.user.username}

  %li.list-group-item
    = form_for :description, url: title_tweak_descriptions_path(@title, tweak), remote: true, method: :post do |f|
      .row.form-group
        .col-md-4
          = f.text_area :text, value: nil, placeholder: "Describe '#{tweak.name}'", rows: 3, class: 'form-control'
      .row
        .col-md-8
          = f.submit 'Save', class: 'btn btn-primary'
